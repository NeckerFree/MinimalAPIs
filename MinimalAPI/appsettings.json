{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:HH:mm:ss} { Level: u11 }] {Message: lj } { NewLine }"
        }
          
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "OutputTemplate": "[{Timestamp:HH:mm:ss} { Level: u11 }] {Message: lj } { NewLine }"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
